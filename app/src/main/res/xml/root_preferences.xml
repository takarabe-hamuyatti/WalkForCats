<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/goal_header">

        <EditTextPreference
            app:key="goal"
            app:title="@string/aDayGoal"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="weeklyGoal"
            app:title="@string/weeklyGoal"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />



    </PreferenceCategory>


</PreferenceScreen>