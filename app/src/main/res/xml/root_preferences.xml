<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/goal_header">

        <EditTextPreference
            app:key="dailyGoal"
            app:title="@string/dailyGoal"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="20000"
            />

        <EditTextPreference
            app:key="monthlyGoal"
            app:title="@string/monthlyGoal"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="300000"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />



    </PreferenceCategory>


</PreferenceScreen>